<Window x:Class="DBMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBMS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Name="tabZaposleni">
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock Text="Zaposleni" MouseLeftButtonDown="tabZaposleni_Clicked" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <DataGrid Name="GridZaposleni" Height="250" VerticalAlignment="Top"/>
                    <Button  Name="zaposleniChildButton" Content="Show Child entities" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,255,664,107" Click="zaposleniChildButton_Click"/>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock Text="Poslovni Prostor"></TextBlock>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
