<Window x:Class="DBMS.HardverChildren"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBMS"
        mc:Ignorable="d"
        Title="HardverChildren" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Name="tabProgrameri">
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock Text="Racunar" MouseLeftButtonDown="tabRacunar_Clicked" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <DataGrid Name="GridRacunar" Height="250" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock Text="Mobilni" MouseLeftButtonDown="tabMobilni_Clicked" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <DataGrid Name="GridMobilni" Height="250" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
